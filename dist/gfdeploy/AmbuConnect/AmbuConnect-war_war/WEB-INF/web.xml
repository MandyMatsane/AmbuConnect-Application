<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>dyict.ac.za.bl.UpdatePatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPatientServlet</servlet-name>
        <servlet-class>dyict.ac.za.bl.AddPatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>dyict.ac.za.bl.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>dyict.ac.za.bl.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPatientServlet</servlet-name>
        <servlet-class>dyict.ac.za.bl.ListPatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPatientServlet</servlet-name>
        <servlet-class>dyict.ac.za.bl.EditPatientServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePatientServlet</servlet-name>
        <servlet-class>dyict.ac.za.bl.DeletePatientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/PatientServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPatientServlet</servlet-name>
        <url-pattern>/AddPatientServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPatientServlet</servlet-name>
        <url-pattern>/ListPatientServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPatientServlet</servlet-name>
        <url-pattern>/EditPatientServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePatientServlet</servlet-name>
        <url-pattern>/DeletePatientServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>adminUsername</param-name>
        <param-value>admin@example.com</param-value>
    </context-param>
    <context-param>
        <param-name>adminPassword</param-name>
        <param-value>admin@123</param-value>
    </context-param>
</web-app>
